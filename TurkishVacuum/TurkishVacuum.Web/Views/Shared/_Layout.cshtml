<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Şirket tanıtım ve ürün katalog sayfası" />
    <meta name="keywords" content="ürünler, hizmetler, katalog" />
    <title>@ViewData["Title"] - Turkish Vakum Cihazları ve Teknolojisi</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="logo">
                <a href="@Url.Action("Index", "Home")">
                    <img src="~/images/logo-light.png" alt="Logo" class="logo-image" />
                </a>
            </div>

            <!-- Hamburger Menu Button -->
            <button class="hamburger-menu" id="hamburgerMenu" aria-label="Menü">
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
            </button>

            <ul class="nav-menu" id="navMenu">
                <li><a class="nav-link" asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                <li><a class="nav-link" asp-controller="Home" asp-action="Yedek_Parca">Yedek Parça</a></li>
                <li><a class="nav-link" asp-controller="Home" asp-action="Destek">Destek</a></li>
                <li><a class="nav-link" asp-controller="Home" asp-action="Hakkimizda">Hakkımızda</a></li>
                <li><a class="nav-link" asp-controller="Home" asp-action="Iletisim">İletişim</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
        <!-- Floating Contact Button -->
        <a href="@Url.Action("Iletisim", "Home")" class="floating-contact-button" title="İletişime Geçin">
            <i class="material-icons">phone_in_talk</i>
            <span class="floating-button-text">İletişim</span>
        </a>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-container">
            <p class="footer-copyright">&copy; @DateTime.Now.Year Turkish Vakum Cihazları ve Teknolojisi. Tüm hakları saklıdır.</p>
            <div class="footer-social-links">
                <a href="#" class="footer-social-link" title="WhatsApp">
                    <i class="bi bi-whatsapp"></i>
                </a>
                <a href="https://www.facebook.com/people/Turk%C4%B1sh-vakum-cihazlar%C4%B1-ve-teknolojisi-izmir/100083208278701/" target="_blank" class="footer-social-link" title="Facebook">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="https://www.instagram.com/ibrahim.dost?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw==" target="_blank" class="footer-social-link" title="Instagram">
                    <i class="bi bi-instagram"></i>
                </a>
            </div>
        </div>
    </footer>

    <script>
        // Hamburger Menu Toggle
        document.getElementById('hamburgerMenu').addEventListener('click', function() {
            this.classList.toggle('active');
            document.getElementById('navMenu').classList.toggle('active');
        });

        // Close menu when clicking on a link
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', function() {
                document.getElementById('hamburgerMenu').classList.remove('active');
                document.getElementById('navMenu').classList.remove('active');
            });
        });

        // Close menu when clicking outside
        document.addEventListener('click', function(event) {
            const navbar = document.querySelector('.navbar');
            const hamburger = document.getElementById('hamburgerMenu');
            const navMenu = document.getElementById('navMenu');

            if (!navbar.contains(event.target)) {
                hamburger.classList.remove('active');
                navMenu.classList.remove('active');
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>