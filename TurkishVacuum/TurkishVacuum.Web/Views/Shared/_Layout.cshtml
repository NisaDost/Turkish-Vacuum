<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Şirket tanıtım ve ürün katalog sayfası" />
    <meta name="keywords" content="ürünler, hizmetler, katalog" />
    <title>@ViewData["Title"] - Turkish Vakum Cihazları ve Teknolojisi</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <div class="nav-container">
            <div class="logo">Turkish Vakum Cihazları ve Teknolojisi</div>
            <ul class="nav-menu">
                <li><a href="#ana-sayfa" class="nav-link">Ana Sayfa</a></li>
                <li><a href="#katalog" class="nav-link">Katalog</a></li>
                <li><a href="#hakkimizda" class="nav-link">Hakkımızda</a></li>
                <li><a href="#iletisim" class="nav-link">İletişim</a></li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; @DateTime.Now.Year Turkish Vakum Cihazları ve Teknolojisi. Tüm hakları saklıdır.</p>
        </div>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>